{{#form-wrapper}}

  {{#form-controls legend='Write a new post'}}

    {{input-group
      property='model.title'
    }}

    {{input-group
      property='model.description'
      type='textarea'
    }}

    {{input-group
      property='model.category'
      content=categories
    }}

    {{input-group
      property='model.views'
      type='number'
    }}

    {{input-group
      property='model.published'
      type='checkbox'
    }}

    {{input-group
      property='model.writtenOn'
      type='date'
    }}

  {{/form-controls}}

  {{form-submission}}

{{/form-wrapper}}

<dl>
  <dt>Title</dt>
  <dd data-test="title">{{model.title}}</dd>
  <dt>Description</dt>
  <dd data-test="description">{{model.description}}</dd>
  <dt>Category</dt>
  <dd data-test="category">{{model.category}}</dd>
  <dt>Views</dt>
  <dd data-test="views">{{model.views}}</dd>
  <dt>Published</dt>
  <dd data-test="published">{{model.published}}</dd>
  <dt>Written On</dt>
  <dd data-test="written-on">{{model.writtenOn}}</dd>
</dl>

{{#if editing}}
  {{destroy-submission}}
{{/if}}
