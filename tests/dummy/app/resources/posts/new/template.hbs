{{#form-wrapper}}

  {{#form-controls legend='Write a new post'}}
    {{input-wrapper value=model.title placeholder='Title'}}
    {{input-wrapper value=model.description type='textarea'}}
    {{input-wrapper
      value=model.category
      content=categories
      type='select'
    }}
    {{input-wrapper
      type='number'
      value=model.views
    }}
    {{input-wrapper
      type='checkbox'
      value=model.published
    }}
  {{/form-controls}}

  {{form-submission}}

{{/form-wrapper}}

<dl>
  <dt>Title</dt>
  <dd>{{model.title}}</dd>
  <dt>Description</dt>
  <dd>{{model.description}}</dd>
</dl>

{{errors.model.title.firstObject}}

{{#if editing}}
  {{destroy-submission}}
{{/if}}
