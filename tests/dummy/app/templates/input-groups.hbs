{{!-- Default --}}

{{input-group
  property='model.name'
}}

{{!-- Textarea --}}

{{input-group
  property='model.description'
  type='textarea'
}}

{{!-- Select --}}

{{input-group
  property='model.color'
  content=colors
}}

{{!-- Number --}}

{{input-group
  property='model.numberOfSeeds'
  type='number'
}}

{{!-- Checkbox --}}

{{input-group
  property='model.isTropical'
  type='checkbox'
}}

{{!-- Date --}}

{{input-group
  property='model.pickedOn'
  type='date'
}}
