{{#if cancel}}
  {{form-submission-button
    action='cancel'
    disabled=formIsSubmitted
    text=cancelText
    type='reset'
  }}
{{/if}}

{{#if delete}}
  {{form-submission-button
    action='delete'
    disabled=formIsSubmitted
    text=deleteText
  }}
{{/if}}

{{#if submit}}
  {{form-submission-button
    action='submit'
    disabled=formIsSubmitted
    text=submitText
    type='submit'
  }}
{{/if}}

{{#if formIsSubmitted}}
  {{partial 'form-is-submitted'}}
{{/if}}
