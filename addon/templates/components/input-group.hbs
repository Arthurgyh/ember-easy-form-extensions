{{#if label}}
  {{label-field
    for=inputId
    label=label
  }}
{{/if}}

{{#if hasBlock}}
  {{!-- If block form... --}}
  {{yield}}
{{else}}
  {{!-- ...else show input --}}
  {{partial inputPartial}}
{{/if}}

{{#if shouldShowError}}
  {{error-field
    shouldShowError=shouldShowError
    label=label
    property=property
  }}
{{/if}}

{{#if hint}}
  {{hint-field hint=hint}}
{{/if}}
