{{#if label}}
  {{label-field
    for=inputId
    label=label
  }}
  {{!-- TODO - change label to text? --}}
{{/if}}

{{#if hasBlock}}
  {{!-- If block form... --}}
  {{yield}}
{{else}}
  {{!-- ...else show input --}}
  {{partial inputPartial}}
{{/if}}

{{error-field
  label=label
  property=property
  showError=showError
}}

{{#if hint}}
  {{hint-field text=hint}}
{{/if}}
