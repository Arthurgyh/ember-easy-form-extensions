{{#if label}}
  {{label-field label=label}}
{{/if}}

{{#if template}}
  {{!-- If block form... --}}
  {{yield}}
{{else}}
  {{!-- ...else show input --}}
  {{input
    placeholder=placeholder
    name=name
    type=type
    value=value
  }}
{{/if}}

{{error-field property=property label=label}}

{{#if hint}}
  {{hint-field hint=hint}}
{{/if}}
